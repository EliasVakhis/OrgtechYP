<Window x:Class="OrgtechYP.Pages.AddRequest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrgtechYP.Pages"
        mc:Ignorable="d"
        Title="Добавление заявки" Height="500" Width="600">
    <Grid Margin="20">
        <StackPanel Margin="10">
            <Label Content="Добавление заявки:" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" Margin="0,10,0,20"/>

            <Label Content="Вид оргтехники:" />
            <ComboBox x:Name="vidorg" DisplayMemberPath="TypeName" Width="500" Margin="0,0,0,10"/>

            <Label Content="Модель" />
            <TextBox x:Name="model" Width="500" Height="25" Margin="0,0,0,10" TextWrapping="Wrap"/>

            <Label Content="Описание:" />
            <TextBox x:Name="description" Width="500" Height="60" Margin="0,0,0,10" TextWrapping="Wrap"/>

            <Label Content="Заказчик:" />
            <ComboBox x:Name="customers" DisplayMemberPath="FullName" Width="500" Margin="0,0,0,20"/>

            <Button Background="#67BA80" Content="Добавить" HorizontalAlignment="Center" Height="50" Width="200" Click="Button_Click" FontWeight="Bold" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
